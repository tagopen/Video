section.example
  .container.example__container
    .row.justify-content-center.justify-content-lg-start.align-items-center.text-center.text-md-left
      .col-22.col-lg-18
        .example__box
          .row
            .col-24.col-md-18
              h2.example__heading!= page.example.heading
            .col-24.col-md-6.text-md-right
              .example__year!= page.example.year
      .col-22
        a.example__video.vd-video(data-toggle="modal" href="#video__modal-full")
          img.img-fluid.vd-video__img(src!= page.example.img.src, alt!= page.example.img.alt)
          .vd-video__descr
            .vd-video__play.mp-play.mp-play--big
              i.fa.fa-play.mp-play__icon(aria-hidden="true") 