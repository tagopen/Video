    .tabs__item
      .row
        .col-24.col-md-12
          .img-container
            img#image.img-fluid(src='images/picture.jpg')
        .col-24.col-md-12
          .preview-lg
      .row
        .col-24
          .btns-group
            button.btn.btn--default(type='button', data-method='rotate', data-option='-90', title='Rotate Left')
              span.docs-tooltip(data-toggle='tooltip', data-animation='false', title='$().cropper("rotate", -90)')
                span.fa.fa-rotate-left
            button.btn.btn--default(type='button', data-method='rotate', data-option='90', title='Rotate Right')
              span.docs-tooltip(data-toggle='tooltip', data-animation='false', title='$().cropper("rotate", 90)')
                span.fa.fa-rotate-right
            label.btn.btn--default(for='inputImage', title='Upload image file')
              input#inputImage.sr-only(type='file', name='file', accept='.jpg,.jpeg,.png,.gif,.bmp,.tiff')
              span.docs-tooltip(data-toggle='tooltip', data-animation='false', title='Import image with Blob URLs')
                span.fa.fa-upload
            button.btn.btn--default(type='button', data-method='getCroppedCanvas', data-option='{ "maxWidth": 4096, "maxHeight": 4096 }')
              span.docs-tooltip(data-toggle='tooltip', data-animation='false', title='$().cropper("getCroppedCanvas", { maxWidth: 4096, maxHeight: 4096 })')
                | Get Cropped Canvas
          .btn-group(data-toggle='buttons')
            label.btn.btn.btn--default.active
              input#aspectRatio0.sr-only(type='radio', name='aspectRatio', value='1.5')
