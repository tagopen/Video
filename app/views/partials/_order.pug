                | 3:2
            label.btn.btn.btn--default
              input#aspectRatio1.sr-only(type='radio', name='aspectRatio', value='0.66666666666')
              span.docs-tooltip(data-toggle='tooltip', data-animation='false', title='aspectRatio: 2 / 3')
                | 2:3
