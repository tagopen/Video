section.service
  .container
    .row
      .col-24
        h2.heading.heading--curl.service__heading!= page.service.heading
    .row.justify-content-center
      .col-24.col-lg-22
        .row.justify-content-center.align-items-center
          each item, i in page.service.items
            .col-24.col-sm-12.col-md-8.col-lg-8
              .sv-item.service__item.js-wow.fadeInLeft(data-wow-delay=0.2 + 0.2 * i + "s")
                .sv-item__photo
                  +svg(item.icon)(class="sv-item__icon")
                p.sv-item__text!= item.text
